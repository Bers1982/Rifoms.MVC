@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";

    <h1>Зарегистрироваться</h1>
    <hr />
    <div class="card p-4">
        <div class="card-body p-4">
            <h1>Зарегистрироваться</h1>
            <p class="text-muted">Создайте свой аккаунт</p>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="icon-user"></i>
                    </span>
                </div>
                <input class="form-control" type="text" placeholder="Имя пользователя">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">@@</span>
                </div>
                <input class="form-control" type="text" placeholder="Электронная почта">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="icon-lock"></i>
                    </span>
                </div>
                <input class="form-control" type="password" placeholder="Пароль">
            </div>
            <div class="input-group mb-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="icon-lock"></i>
                    </span>
                </div>
                <input class="form-control" type="password" placeholder="Повторите пароль">
            </div>
            <a class="btn btn-block btn-success">Зарегистрироваться</a>
            <a class="btn btn-block btn-primary" href="@($"{Model.SiteUrl}/auth/login.html")">Авторизоваться</a>

        </div>
        <div class="card-footer p-4">
            <div class="row">
                <div class="col-6">
                    <button class="btn btn-block btn-facebook" type="button">
                        <span>facebook</span>
                    </button>
                </div>
                <div class="col-6">
                    <button class="btn btn-block btn-twitter" type="button">
                        <span>twitter</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
}