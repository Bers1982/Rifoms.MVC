@model LoginModel
@{
    ViewData["Title"] = "Админ-панель ТФОМС РИ";

    <h1>Админ-панель для ИСМАИЛА</h1>
    <h1>Авторизоваться</h1>
    <hr />
    <div class="card-group">
        <div class="card p-4">
            <div class="card-body">
                <h1>Авторизоваться</h1>
                <p class="text-muted">Войдите в свою учетную запись</p>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="icon-user"></i>
                        </span>
                    </div>
                    <input class="form-control" type="text" placeholder="Имя пользователя">
                </div>
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="icon-lock"></i>
                        </span>
                    </div>
                    <input class="form-control" type="password" placeholder="Пароль">
                </div>
                <div class="row">
                    <div class="col-6">
                        <button class="btn btn-primary px-4" type="button">Авторизоваться</button>
                    </div>
                    <div class="col-6 text-right">
                        <a class="btn btn-link px-0" href="@($"{Model.SiteUrl}/admin/forgot.html")" type="button">Забыли пароль?</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
            <div class="card-body text-center">
                <div>
                    <h2>Зарегистрироваться</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                    <a class="btn btn-primary active mt-3" href="@($"{Model.SiteUrl}/admin/register.html")" type="button">Зарегистрируйтесь сейчас!</a>
                </div>
            </div>
        </div>
    </div>
}