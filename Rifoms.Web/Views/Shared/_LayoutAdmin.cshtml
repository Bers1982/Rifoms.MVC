<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @*<link rel="stylesheet" href="~/css/reset.css" />*@
    <link rel="stylesheet" href="~/summernote/bootstrap.min.css" />
    <link rel="stylesheet" href="~/summernote/summernote-bs4.min.css" />
    @*<link rel="stylesheet" href="~/css/widget.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/rifoms.css" />*@

</head>
<body class="body_content">

    <div id="header" class="container-fluid m-0 p-0">
        <div class="logo_bg">
            <a href="/">
                <img src="~/images/web/logo_new1.png" alt="Логотип ТФ ОМС РИ" title="Логотип ТФ ОМС РИ" />
                ТЕРРИТОРИАЛЬНЫЙ ФОНД<br /> ОБЯЗАТЕЛЬНОГО МЕДИЦИНСКОГО<br /> СТРАХОВАНИЯ РЕСПУБЛИКИ ИНГУШЕТИЯ
            </a>
        </div>

        @*<nav class="navbar navbar-bg-color text-light navbar-expand-lg bg-body-tertiary">*@
        <nav class="navbar text-light navbar-expand-lg bg-primary-gradient">
            <div class="container-fluid">
                <a class="navbar-brand ms-5" href="/">
                    <img src="~/images/web/home-icon.png" alt="На главную" title="Главная" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-inline-flex" id="navbarSupportedContent">
                    <partial name="_TopMenu" />
                    <partial name="_TopAdminMenu" />
                </div>
            </div>
        </nav>

        @*<partial name="_CookieConsentPartial" />*@
    </div>

    <main>
        <div class="container-fluid m-0 p-0 mt-4">
            <div class="row">
                <!--<div class="col-xs-12 col-sm-12 col-md-4 col-lg-3 col-xl-3 col-xxl-2 px-4 py-2">-->
                    <!-- ASIDE MENU -->
                    <!--<partial name="_AsideMenu" />-->
                    <!-- END ASIDE MENU -->
                <!--</div>-->
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-6 col-xl-6 col-xxl-7 ps-3 py-2">
                    @RenderBody()
                </div>
                <!--<div class="col-xs-12 col-sm-12 col-md-4 col-lg-3 col-xl-3 col-xxl-3 py-2">-->
                    <!--ASIDE WIDGET ФФОМС-->
                    <!--<partial name="_AsideWidget" />-->
                    <!--END ASIDE WIDGET ФФОМС-->
                <!--</div>-->
            </div>
        </div>
    </main>

    <footer id="footer" class="text-center pb-2">
        <hr />
        <p><strong>&copy; @DateTime.Now.Year - ТФ ОМС РИ. Все права защищены.</strong></p>
    </footer>

    <script src="~/summernote/jquery.min.js" asp-append-version="true"></script>
    <script src="~/summernote/popper.min.js" asp-append-version="true"></script>
    <!--ЕСЛИ РАСКОММЕНТИШЬ ВСПЛЫВАЮЩИЕ ОКНА В ПРОВЕРКЕ ПОЛИСА НЕ СВОРАЧИВАЮТСЯ-->
    <script src="~/summernote/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/summernote/summernote-bs4.min.js" asp-append-version="true"></script>
    <script src="~/summernote/lang/summernote-ru-RU.js" asp-append-version="true"></script>

    @*<script src="https://pos.gosuslugi.ru/bin/script.min.js"></script>
    <script>Widget("https://pos.gosuslugi.ru/form", 354207)</script>*@

    <script>
        $(document).ready(function () {

          


            $('#summernote').summernote({
                lang: 'ru-RU',
                placeholder: 'Здесь находится ваш контенет',
                tabsize: 2,
                height: 120,
                fontNames: ['Arial', 'summernote', 'Comic Sans MS', 'Courier New', 'Helvetica', 'Impact', 'Lucida Grande', 'Tahoma', 'Times New Roman', 'Verdana', 'CustomWebFont'],
                fontSizes: ['8', '9', '10', '11', '12', '14', '18', '24', '36', '48', '64', '82', '150'],
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['fontSizes' ['8', '9', '10', '11', '12', '14', '18', '24', '36', '48', '64', '82', '150']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['codeview', 'help']]
                ],
                buttons: { cancel: CancelButton }
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
